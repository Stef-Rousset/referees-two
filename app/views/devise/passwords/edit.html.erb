<div class="flex flex-col items-start w-8/12 mx-auto my-8">
  <h2 class="font-bold text-xl mb-8">Changer votre mot de passe</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "w-1/2", method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "Mot de passe" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full mb-4" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmer votre mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full mb-4" %>
    </div>

    <div class="actions">
      <%= f.submit "Valider", class: "text-white bg-darkblue text-lg p-2 rounded mt-4 mb-8" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
