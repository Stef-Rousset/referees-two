<div class="flex flex-col items-start w-8/12 mx-auto my-8">
  <h2 class="font-bold text-xl mb-8">Mot de passe oublié ?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mb-4" %>
    </div>

    <div class="actions">
      <%= f.submit "Envoyez-moi les instructions de réinitialisation du mot de passe", class: "text-white bg-darkblue text-lg p-2 rounded my-4" %>
    </div>
  <% end %>
  <div class="mt-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
