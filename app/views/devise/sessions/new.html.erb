<div class="flex flex-col items-start w-8/12 mx-auto my-8">
  <h2 class="font-bold text-xl mb-8">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"text-lg w-full" }) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mb-4" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full mb-4" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "text-white bg-darkblue text-lg p-2 rounded my-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
