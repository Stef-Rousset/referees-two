<% content_for :meta_title, "Arbire d'escrime - Questions" %>
<% content_for :meta_description, "Entraînes-toi avec le type de questions sélectionné" %>

<section class="w-8/12 mx-auto my-10 text-lg">
<% @questions.each do |question| %>
  <h3 class="italic"><%= @count %> questions de niveau <%= question.level %>, catégorie <%= question.category %></h3>
  <form class="question-index-forms flex flex-col mt-8">
    <legend class="mb-4"><%= question.statement %> :</legend>
    <label>
      <input name="question" type="radio" value="<%= question.prop_one %>" data-value="un">
      <%= question.prop_one %>
    </label>
    <label>
      <input name="question" type="radio" value="<%= question.prop_two %>" data-value="deux">
      <%= question.prop_two %>
    </label>
    <label>
      <input name="question" type="radio" value="<%= question.prop_three %>" data-value="trois">
      <%= question.prop_three %>
    </label>
    <button class="self-center text-white bg-darkblue text-lg p-2 rounded mt-4" >Valider</button>
  </form>
  <div class="question-index-answer hidden">
    <p class="right-answer hide-element">La bonne réponse est la réponse <%#= question.answer.good_prop %>.</p>
    <p class="answer-explanation" data-value="<%#= question.answer.good_prop %>"><%#= question.answer.explanation %>.</p>
  </div>
<% end %>
<%= will_paginate @questions, class: "apple_pagination" %>
</section>

