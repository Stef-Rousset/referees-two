<navbar class=" flex justify-between bg-white w-screen h-10vh">
    <div class="flex items-center justify-start">
      <%= image_tag "nav_image.jpg", class: "w-8 h-8 md:w-12 md:h-12 mr-4" %>
      <%= link_to "Accueil", root_path, class: "text-darkblue text-xl hover:text-gray-500 hover:font-semibold mr-4" %>
      <%= link_to "Ressources", ressources_path, class: "text-darkblue text-xl hover:text-gray-500 hover:font-semibold mr-4" %>
      <%= mail_to "contact@escrime-qcm-arbitrage.com", "Contact", class: "text-darkblue text-xl hover:text-gray-500 hover:font-semibold mr-4" %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <ul data-controller="secret-code" class="flex items-center justify-start w-fit">
      <% if user_signed_in? && (current_user.admin? || current_user.contributor?) %>
        <li><%= link_to "Ajouter une question", new_question_path, class: "text-darkblue text-xl hover:text-gray-500 hover:font-semibold mr-4" %></li>
        <li><%= link_to "Voir mes questions", dashboard_path, class: "text-darkblue text-xl hover:text-gray-500 hover:font-semibold mr-4" %></li>
        <li><%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-darkblue text-xl hover:text-gray-500 hover:font-semibold mr-4" %></li>
      <% else %>
        <li data-secret-code-target="signin" class="flex justify-between items-center hidden">
          <%= link_to "Login", new_user_session_path, class: "text-darkblue text-xl hover:text-gray-500 hover:font-semibold mr-4" %>
        </li>
      <% end %>
    </ul>
</navbar>

